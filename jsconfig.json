{
  "typeAcquisition": {
    "include": ["jest"]
  },
  "compilerOptions": {
    "module": "esnext",

    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/styles/*": ["src/styles/*"],
      "@/services/*": ["src/services/*"]
    }
  },
  "exclude": ["node_modules"]
}
